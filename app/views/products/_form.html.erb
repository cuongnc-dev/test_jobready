<%= form_for @product, remote: true do |f| %>
  <div class="form-group">
    <%= f.label :name, t(".name") %>
    <%= f.text_field :name, class: "form-control" %>
    <p class="error-message">
      <%= @product.errors.full_messages_for(:name).first %>
    </p>
  </div>
  <div class="form-group">
    <%= f.label :price, t(".price") %>
    <%= f.number_field :price, class: "form-control" %>
    <p class="error-message">
      <%= @product.errors.full_messages_for(:price).first %>
    </p>
  </div>
  <div class="form-group">
    <%= f.label :tax, t(".tax") %>
    <%= f.select :tax, options_for_select(Product.taxes.map{|key, value| [t(".#{key}"), key]}), {},
      class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :type_product, t(".type_product") %>
    <%= f.select :type_product, options_for_select(Product.type_products.map{|key, value| [t(".#{key}"), key]}), {},
      class: "form-control" %>
  </div>
  <div class="text-center">
    <%= f.submit t("save"), class: "btn btn-primary" %>
  </div>
<% end %>
